# Production Environment Variables
# Copy this to .env.production and fill in your production values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Email Service (Resend)
RESEND_API_KEY=re_your_api_key

# Stripe (for future use)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# App Settings
NEXTAUTH_URL=https://lifenav.ai
NEXTAUTH_SECRET=your-generated-secret-here
NEXT_PUBLIC_APP_URL=https://lifenav.ai

# Admin Security
ADMIN_USER_IDS=comma,separated,user,ids
ADMIN_ALLOWED_IPS=
ADMIN_CREATION_SECRET=generate-secure-secret
ADMIN_SESSION_KEY=generate-secure-key

# Security Settings
ADMIN_SESSION_LIFETIME=3600
ADMIN_MAX_LOGIN_ATTEMPTS=3
ADMIN_LOCKOUT_DURATION=900

# ID.me Integration (for future use)
IDME_CLIENT_ID=
IDME_CLIENT_SECRET=