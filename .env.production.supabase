# Supabase OAuth Production Environment Variables
# Copy this to .env.production and update with your actual values

# =================================================================
# SUPABASE CONFIGURATION (Required)
# =================================================================

# Get these from Supabase Dashboard → Settings → API
NEXT_PUBLIC_SUPABASE_URL=https://wcsqkdooarbolnxppczi.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_production_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_production_service_role_key_here

# =================================================================
# APPLICATION SETTINGS (Required)
# =================================================================

# Your production domain (must match Supabase Site URL)
NEXT_PUBLIC_APP_URL=https://yourdomain.com

# Node environment
NODE_ENV=production
PORT=3000

# =================================================================
# EMAIL SERVICE (Required for auth emails)
# =================================================================

RESEND_API_KEY=your_resend_api_key_here

# =================================================================
# ADMIN SECURITY (Required)
# =================================================================

# Admin User IDs from Supabase auth.users table (comma-separated)
ADMIN_USER_IDS=

# Optional: Restrict admin access to specific IPs
ADMIN_ALLOWED_IPS=

# Admin security keys (generate strong random strings)
ADMIN_CREATION_SECRET=
ADMIN_SESSION_KEY=
ADMIN_MFA_ENABLED=true

# Session settings
ADMIN_SESSION_LIFETIME=3600  # 1 hour
ADMIN_MAX_LOGIN_ATTEMPTS=3
ADMIN_LOCKOUT_DURATION=900   # 15 minutes

# =================================================================
# PAYMENT INTEGRATION (Required if using referral/payment features)
# =================================================================

STRIPE_SECRET_KEY=sk_live_
STRIPE_PUBLISHABLE_KEY=pk_live_
STRIPE_WEBHOOK_SECRET=whsec_

# =================================================================
# ID.ME INTEGRATION (Optional - for service member verification)
# =================================================================

IDME_CLIENT_ID=
IDME_CLIENT_SECRET=

# =================================================================
# MONITORING (Optional but recommended)
# =================================================================

# Error tracking
SENTRY_DSN=

# Analytics
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# =================================================================
# RATE LIMITING (Recommended)
# =================================================================

# General API rate limits
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Auth-specific rate limits
AUTH_RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# =================================================================
# LOGGING
# =================================================================

LOG_LEVEL=info
LOG_FILE_PATH=/var/log/your-app/app.log
ERROR_LOG_PATH=/var/log/your-app/error.log